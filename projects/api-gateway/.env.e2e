# E2E Testing Environment Variables for API Gateway
# This file is used for E2E testing with Docker Compose

# Node environment
NODE_ENV=test

# Server configuration
PORT=8000

# Database configuration (for E2E testing)
DATABASE_URL=postgresql://skilltree:dev_password@postgres-e2e:5432/skilltree_e2e?schema=public

# Redis configuration (for E2E testing)
REDIS_URL=redis://redis-e2e:6379

# JWT secrets for E2E testing (NOT FOR PRODUCTION)
JWT_SECRET=e2e_test_jwt_secret_key_for_testing_only_never_use_in_production
JWT_REFRESH_SECRET=e2e_test_jwt_refresh_secret_key_for_testing_only_never_use_in_production

# CORS configuration
CORS_ORIGIN=http://localhost:3001

# Session configuration
SESSION_COOKIE_NAME=skilltree-session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax